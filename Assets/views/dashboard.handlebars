{{!-- Extending the main layout --}}
{{#extend 'main'}}

<h2>Your Dashboard</h2>

{{#each posts}}
<div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <a href="/post/edit/{{this.id}}">Edit</a>
    <button class="delete-post" data-id="{{this.id}}">Delete</button>
</div>
{{/each}}

<form id="new-post-form">
    <input type="text" name="title" placeholder="Post Title">
    <textarea name="content" placeholder="Write your post here..."></textarea>
    <button type="submit">Create Post</button>
</form>

{{/extend}}
