<h1>Tech Blog</h1>
{{#if logged_in}}
  <a href="/dashboard">Dashboard</a>
  <a href="/logout">Logout</a>
{{else}}
  <a href="/login">Login</a>
{{/if}}

{{#each posts}}
  <div>
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <small>By {{this.username}} on {{this.createdAt}}</small>
  </div>
{{/each}}




